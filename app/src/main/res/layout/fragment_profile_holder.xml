<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/txtProfileWelcome"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/profile_welcome_text"
        android:textSize="40sp"
        android:gravity="center"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"/>

    <View
        android:id="@+id/profileWelcomeTextLine"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_margin="8dp"
        app:layout_constraintTop_toBottomOf="@+id/txtProfileWelcome"
        android:background="@color/black"/>

    <fragment
        android:id="@+id/nav_host_fragment_fragment_profile_holder"
        android:name="androidx.navigation.fragment.NavHostFragment"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:defaultNavHost="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/profileWelcomeTextLine"
        app:navGraph="@navigation/profile_navigation" />

</androidx.constraintlayout.widget.ConstraintLayout>