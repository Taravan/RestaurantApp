<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="viewModel"
            type="com.isp.restaurantapp.viewModels.StaffGoodsVM" />
    </data>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/et_add_category_name"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginHorizontal="10dp"
            android:layout_marginVertical="10dp"
            android:hint="Category Name"
            />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="400dp"
            android:layout_height="50dp"
            android:layout_marginHorizontal="10dp"
            android:layout_marginVertical="10dp">

            <Button
                android:id="@+id/btn_create_category"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:text="Create"
                android:layout_margin="5dp"
                android:autoSizeTextType="uniform"
                android:maxLines="1"
                app:layout_constraintRight_toLeftOf="@id/guide_add_category"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>

            <Button
                android:id="@+id/btn_cancel_category"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:text="Cancel"
                android:layout_margin="5dp"
                android:autoSizeTextType="uniform"
                android:maxLines="1"
                app:layout_constraintLeft_toRightOf="@id/guide_add_category"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guide_add_category"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.5"
                />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </LinearLayout>

</layout>